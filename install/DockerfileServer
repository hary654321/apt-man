FROM ubuntu
RUN apt-get update
RUN apt-get install -y nmap
WORKDIR /app
ENV TZ=Asia/Shanghai
RUN ln -snf /usr/share/zoneinfo/$TZ /etc/localtime && echo $TZ > /etc/timezone
COPY ./apt-server /app/apt-server
RUN chmod +x /app/apt-server
CMD ["/app/apt-server","core.toml"]

